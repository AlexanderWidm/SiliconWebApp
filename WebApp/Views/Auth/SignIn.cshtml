@model SignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<section class="signin">
    <div class="container">

        <form method="post" asp-controller="Auth" asp-action="SignIn">
            
            <h1>Welcome Back</h1>
            <p>Don't have an account yet? <a asp-controller="Auth" asp-action="SignUp">Sign up here</a></p>
            <div class="form-content">
                <div class="input-email input-group">
                    <label class="input-label" asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-password input-group">
                    <label class="input-label" asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                @if (!string.IsNullOrEmpty(ViewData["StatusMessage"] as string))
                {
                    <div class="status-alert">
                        @ViewData["StatusMessage"]
                    </div>
                }

                <div class="checkbox-group boxcheck">
                    <div class="input-group remember-me">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">
                            Remember me
                        </label>
                    </div>
                </div>

                <button class="btn-theme shadow-theme" type="submit">Sign In</button>
                <a class="forgot-password" asp-action="Reset" asp-controller="Account">Forgot your password?</a>
            </div>

        </form>
        <p class="some-text">Or sign in with your social network</p>
        <div class="some-login">
            <a asp-action="GoogleLogin" asp-controller="Auth" class="btn-theme-secondary "><i class="fa-brands fa-google"></i>Google</a>
            <a asp-action="FacebookLogin" asp-controller="Auth" class="btn-theme-secondary "><i class="fa-brands fa-facebook-f"></i>Facebook</a>
        </div>
    </div>
</section>