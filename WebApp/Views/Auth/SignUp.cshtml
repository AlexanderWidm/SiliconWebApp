
@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<section class="signup">
    <div class="container">

        <form method="post" asp-controller="Auth" asp-action="SignUp">
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here</a></p>
            <div class="form-content">
                <div class="input-firstname input-group">
                    <label class="input-label" asp-for="FirstName"></label>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="input-lastname input-group">
                    <label class="input-label" asp-for="LastName"></label>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="input-email input-group">
                    <label class="input-label" asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                    @if (!string.IsNullOrEmpty(ViewData["StatusMessage"] as string))
                    {
                        <div class="alert">
                            @ViewData["StatusMessage"]
                        </div>
                    }
                </div>
                <div class="input-password input-group">
                    <label class="input-label" asp-for="Password"></label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-confirm input-group">
                    <label class="input-label" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" data-val-equalto-other="#Password" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="checkbox-group boxcheck">
                <div class="input-group">
                    <input class="conditions-terms" asp-for="TermsAndConditions"/>
                    <label class="conditions-terms"asp-for="TermsAndConditions">
                        I Agree to the <a asp-action="Terms">Terms</a> & <a asp-action="Conditions" asp-controller="About">Conditions </a>
                    </label>
                    <span asp-validation-for="TermsAndConditions"></span>
                </div>
                </div>

                <button class="btn-theme shadow-theme" type="submit">Sign Up</button>
            </div>

        </form>

    </div>
</section>