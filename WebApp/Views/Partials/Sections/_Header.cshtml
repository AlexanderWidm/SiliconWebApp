@inject SignInManager<UserEntity> _signInManager


<header class="@ViewData["HeaderClass"]">
    <div class="container">
        <a class="logo" asp-action="Home" asp-controller="Default"><img src="~/images/logos/silicon-logo.svg" alt="Silicon" /></a>

        <nav>
            @if (_signInManager.IsSignedIn(User))
            {
                <a asp-action="Home" asp-controller="Default">Overview</a>
                <a asp-action="ErrorNotFound" asp-controller="Default">Courses</a>
                <a asp-action="Contact" asp-controller="Auth">Contact</a>
            }
            else
            {
                <a asp-action="Home" asp-controller="Default">Overview</a>
                <a href="/#toolSection" id="featuresLink">Features</a>
                <a asp-action="Contact" asp-controller="Auth">Contact</a>
            }
        </nav>

        <div class="account-buttons">
            @if (_signInManager.IsSignedIn(User))
            {
                @User.Identity.Name
                <a class="btn-theme btn-small" asp-action="SignOut" asp-controller="Auth"><i class="fa-regular fa-user"></i>Sign Out</a>
            }
            else
            {
                <a class="btn-theme-secondary btn-small" asp-action="SignIn" asp-controller="Auth"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
                <a class="btn-theme btn-small" asp-action="SignUp" asp-controller="Auth"><i class="fa-regular fa-user"></i>Sign up</a>
            }
        </div>
            <div class="theme-switch">
            <label class="label-text" for="theme-switch-mode">Light</label>
            <label class="btn-switch">
                <input id="theme-switch-mode" type="checkbox">
                <span class="slider round"></span>
            </label>
            <label class="label-text" for="theme-switch-mode">Dark</label>
        </div>
            

        <button class="btn-mobile"><i class="fa-regular fa-bars"></i></button>

    </div>
</header>
<script src="~/js/header.js"></script>