<section class="newsletter-section">
    <div class="container">
        <div class="newsletter-content">
            <div class="newsletter-header">
                <h1>Don't Want to Miss Anything?</h1>
                <img src="~/images/logos/arrows.svg" alt="" />
            </div>
            <div class="newsletter-grid">
                <h4>Sign up for Newsletter</h4>
                <div class="newsletter-boxes">
                    <div class="newsletter-box">
                        <input type="checkbox" id="daily-newsletter" name="daily-newsletter" checked />
                        <label for="daily-newsletter">Daily Newsletter</label>
                    </div>
                    <div class="newsletter-box">
                        <input type="checkbox" id="advertising-updates" name="advertising-updates" checked />
                        <label for="advertising-updates">Advertising Updates</label>
                    </div>
                    <div class="newsletter-box">
                        <input type="checkbox" id="week-in-review" name="event-updates" checked />
                        <label for="week-in-review">Week in Review</label>
                    </div>
                    <div class="newsletter-box">
                        <input type="checkbox" id="event-updates" name="event-updates" checked />
                        <label for="event-updates">Event Updates</label>
                    </div>
                    <div class="newsletter-box">
                        <input type="checkbox" id="startups-weekly" name="startups-weekly" checked />
                        <label for="startups-weekly">Startups Weekly</label>
                    </div>
                    <div class="newsletter-box">
                        <input type="checkbox" id="podcasts" name="podcasts" checked />
                        <label for="podcasts">Podcasts</label>
                    </div>
                </div>

            </div>
            <form>
                <div class="label-wrapper">
                <i id="mail-icon" class="fa-regular fa-envelope email-icon"></i>
                <input id="mail-letter" class="input-label "type="email" id="email" name="email" placeholder="          Your Email">
                </div>
                <button class="btn-theme">Subscribe*</button>
            </form>
            <label class="terms">
                *Yes I agree to the <a asp-action="ErrorNotFound" asp-controller="Default">terms</a> and <a asp-action ="ErrorNotFound" asp-controller="Default">privacy policy</a>
            </label>
        </div>
    </div>
</section>